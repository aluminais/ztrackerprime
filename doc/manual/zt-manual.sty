% section references
\newcommand{\sectionref}[1]{(see section \ref{#1} on page \pageref{#1})}

% table references
\newcommand{\tableref}[1]{(see table \ref{#1} on page \pageref{#1})}

% figure references
\newcommand{\figureref}[1]{(see figure \ref{#1} on page \pageref{#1})}

% chapter references
\newcommand{\chapterref}[1]{(see chapter \ref{#1} on page \pageref{#1})}

%
% NAME  maillink
%
% DESCRIPTION
%   Create a mailto link
%
% USAGE
%   \maillink(<mailaddr>)
%
\ifx\pdfoutput\undefined % Are we running pdftex?
\newcommand{\maillink}[1]{\texttt{$<$#1$>$}}
\else
\newcommand{\maillink}[1]{\href{mailto:#1}{\texttt{$<$#1$>$}}}
\fi

%
% NAME  weblink
%
% DESCRIPTION
%   Create a link to a web document
%
% USAGE
%   \weblink(<URL>)
%
\ifx\pdfoutput\undefined % Are we running pdftex?
\newcommand{\weblink}[1]{\texttt{#1}}
\else
\newcommand{\weblink}[1]{\href{#1}{\texttt{#1}}}
\fi

%
% NAME  tablist
%
% DESCRIPTION
%   Creates a two column table filling the entire line in width
%
% USAGE
%   \begin{tablist}{<width of left column>}
%   \end{tablist}
%
\newlength{\tmplength}
\newenvironment{tablist}[1]
{%
  \setlength{\tmplength}{\linewidth-(#1)-\tabcolsep*2*2}%
  \par\begin{tabular}{|p{#1}|p{\tmplength}|}%
}
{\end{tabular}\par}


